<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id = "com.phonegap.bogart"
    version = "0.5.1">

    <name>Bogart</name>
    <description>Simple game made with MelonJS.</description>
    <author href="#"
    email="tolkemada@gmail.com">Tolke</author>
    <gap:platforms>
        <gap:platform name="android" minVersion="2.1" />
        <gap:platform name="webos" />
        <gap:platform name="symbian.wrt" />
        <gap:platform name="blackberry" project="widgets"/>
    </gap:platforms>
    <icon src="icon.png" gap:role="default" />
    <gap:splash src="data/splash.png" />
    <feature name="http://api.phonegap.com/1.0/network"/>
    <preference name="phonegap-version" value="1.2.0" />
    <preference name="orientation" value="landscape" />
    <preference name="permissions" value="none"/>
</widget>